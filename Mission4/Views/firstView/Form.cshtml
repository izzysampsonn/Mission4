@{
    ViewData["Title"] = "Grade Calculator";
}

@model ValidateModel;

<div class="grid-container">
    <h2>Grade Calculator</h2>
</div>
<br />
<br />
<br />
<br />
<div class="grid-container gridform">
    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" asp-for="assignment"/> <br />
        <label>Group Projects:</label>
        <input id="projects" asp-for="projects"/> <br />
        <label>Quizzes:</label>
        <input id="quizzes" asp-for="quizzes"/> <br />
        <label>Midterm Exam:</label>
        <input id="midterm" asp-for="midterm"/> <br />
        <label>Final Exam:</label>
        <input id="final" asp-for="final"/> <br />
        <label>INTEX:</label>
        <input id="intex" asp-for="intex"/> <br />
        <br />
        <input class="button" id="calculate" type="submit" value="Submit" />

        <div asp-validation-summary="All"></div>
    </form>
    <br /><br />
</div>

<!-- Java output -->
<br />
<br />
<div class="grid-container result">
    <h2 id="output"></h2>
</div>
